<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
xmlns="http://xmlns.jcp.org/xml/ns/javaee" 
xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" 
id="WebApp_ID" version="3.1">

  <servlet>
	  <servlet-name>LoginController</servlet-name>
	  <servlet-class>com.thanhle.controller.LoginController</servlet-class>
	  <load-on-startup>1</load-on-startup>
  </servlet>
  
  <servlet-mapping>
	  <servlet-name>LoginController</servlet-name>
	  <url-pattern>/login</url-pattern>
  </servlet-mapping>
  
  <servlet>
	  <servlet-name>UserRegistration</servlet-name>
	  <servlet-class>com.thanhle.controller.RegistrationController</servlet-class>
	  <load-on-startup>1</load-on-startup>
  </servlet>
 
  <servlet-mapping>
	  <servlet-name>UserRegistration</servlet-name>
	  <url-pattern>/userRegistration</url-pattern>
  </servlet-mapping>
  <welcome-file-list>
  	<welcome-file>login.jsp</welcome-file>
  </welcome-file-list>
  
</web-app>